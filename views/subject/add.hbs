<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/subject/add" method="post">
      <h1 class="text text-primary mt-2 mb-2">Add new subject</h1>
      <div class="form-group mt-2 mb-2">
         <label for="">Name Subject</label>
         <input class="form-control" type="text" name="full_name" required minlength="3" maxlength="30">
      </div>
      <div class="form-group mt-2 mb-2">
         <label for="">Slot</label>
         <input class="form-control" type="number" name="slot" required min="1" max="70">
      </div>
      
     
      <div class="form-group mt-2 mb-2">
            <label for="">Image</label>
            <input class="form-control" type="text" name="image" required>
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Add">
      </div>
   </form>
</div>