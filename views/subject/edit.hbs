<div class="container text-center mt-3 mb-3 col-md-8">
   <form class="card bg-light ml-3 mr-3" action="/subject/edit/{{subject._id}}" method="post">
      <h1 class="text text-primary mt-2 mb-2">Edit Subject</h1>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for=""> Name Subject</label>
         <input class="form-control" type="text" name="full_name" required minlength="3" maxlength="30" value="{{ subject.full_name }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <label class="fw-bold" for="">Slot</label>
         <input class="form-control" type="number" name="slot" required min="1" max="70" value="{{ subject.slot }}">
      </div>
    
    
      <div class="form-group mt-2 mb-2">
            <label class="fw-bold" for="">Image</label><br>
            <img src="{{ subject.image }}" width="100" height="150">
            <input class="form-control" type="text" name="image" 
            required value="{{ subject.image }}">
      </div>
      <div class="form-group mt-2 mb-2">
         <input class="btn btn-danger" type="submit" value="Edit">
      </div>
   </form>
</div>