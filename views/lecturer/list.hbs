<div class="container col-md8 text-center mt-3 mb-3">
   <table class="table table-bordered">
      <tr>
         <th class="h1 text text-primary" colspan="6">Lecturer LIST</th>
         
      </tr>
      <tr>
         <th>Full name</th>
         <th>Birth year</th>
         <th>Gender</th>
         <th>Email</th>
        
         <th>Image</th>
         <th>Actions</th>
      </tr>
      {{#each lecturers }}
            <tr>
               <td>{{ full_name }}</td>
               <td>{{ birth_year }}</td>
               <td>{{ gender }}</td>
               <td>{{ email }}</td>
               <td>
                  <img src=" {{ image }}"
                  width="250" height="250">
                 </td>
               <td>
                <a class="btn btn-primary" href="/lecturer/add">Add</a>
                  <a class="btn btn-warning" href="/lecturer/edit/{{_id}}">Edit</a>
                  <a class="btn btn-danger" href="/lecturer/delete/{{_id}}"
                  onclick="return confirm('Are you sure to delete this lecturer ?');">Delete</a>
               </td>
            </tr>
      {{/each}}
   </table>
</div>